# Production Environment Configuration Template
# Copy this to .env on your Elastic Beanstalk instance

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=8080

# CORS Settings - Update with your actual domains
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Configuration
API_URL=https://api.radorderpad.com
VITE_API_URL=https://api.radorderpad.com

# Optional: Database URL if using local database
# DATABASE_URL=postgresql://user:password@host:port/database

# Optional: Logging
# LOG_LEVEL=info

# Optional: Session Secret (generate a strong random string)
# SESSION_SECRET=your-secret-here

